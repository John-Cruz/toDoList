  </div>
  <div>
    <%= link_to '<i class="fa fa-plus" title="New Activity"></i> New Activity'.html_safe,
        new_activity_path, class: "radius button small success", remote: true %>
  </div>
  <div id="new-form-container"></div>
</div>

<div class="large-6 columns sortable inline-list" id="all-activities">
  <% @activities.each do |activity| %>
    <%= render partial: "activity", locals: {activity: activity} %>
  <% end %>
</div>

<aside class="large-3 columns hide-for-small" id="complete-activities">
  <h5>Completed Tasks:</h5>
    <ul>
    <% @activities.each do |activity| %>
      <% if activity.complete %>
        <li><i class="fa fa-check" title="Complete"></i> <strong><%= activity.name %></strong></li>
      <% end %>
    <% end %>
    </ul>
</aside>

